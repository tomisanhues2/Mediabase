<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="/css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MovieListController">
   <center>
      <SplitPane dividerPositions="0.9" orientation="VERTICAL" BorderPane.alignment="CENTER">
        <items>
            <HBox prefHeight="100.0" prefWidth="800.0">
               <children>
                  <TableView fx:id="movieTable" prefHeight="400.0" tableMenuButtonVisible="true">
                     <columns>
                        <TableColumn fx:id="listTableID" editable="false" maxWidth="52.0" minWidth="43.0" prefWidth="43.0" resizable="false" text="%movieIDString">
                           <cellValueFactory>
                              <PropertyValueFactory property="ID" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="listTableTitle" prefWidth="243.0" text="%movieTitleString">
                           <cellValueFactory>
                              <PropertyValueFactory property="title" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="listTableYear" prefWidth="94.0" text="%movieYearString">
                           <cellValueFactory>
                              <PropertyValueFactory property="year" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="listTableScore" prefWidth="104.0" text="%movieRatingString">
                           <cellValueFactory>
                              <PropertyValueFactory property="score" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="listTableMore" prefWidth="310.0" styleClass="clickMoreButton" text="%movieMoreString">
                           <cellValueFactory>
                              <PropertyValueFactory property="more" />
                           </cellValueFactory>
                       </TableColumn>
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="800.0" spacing="30.0">
               <children>
                  <Label fx:id="listSearchTitle" text="%listSearchTitle" />
                  <TextField fx:id="listSearchField" prefHeight="26.0" prefWidth="214.0" />
                  <Button fx:id="addMovieButton" mnemonicParsing="false" onAction="#addMovieButton" prefWidth="150.0" text="%addMovieButton" />
               </children>
               <padding>
                  <Insets left="50.0" right="50.0" />
               </padding>
            </HBox>
        </items>
      </SplitPane>
   </center>
   <top>
      <VBox prefHeight="80.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
             <fx:include source="MenuBar.fxml" />
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="800.0" spacing="30.0">
               <children>
                  <Label alignment="CENTER" prefWidth="120.0" text="%listNameLabel">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField />
                  <Label alignment="CENTER" prefWidth="120.0" text="%listAuthorLabel">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
